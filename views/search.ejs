    <title>Search Student Name</title>
    <script>
    function Search(){
        var a = document.getElementById("search").value;
        axios.post('/search',{
            value : a
        }).then((res) => {
            console.log(res.data)
            if(res.data.length == 0){
                alert("Not Found")
            }
            else{
                document.getElementById("name").innerHTML=res.data[0].firstname + " " + res.data[0].lastname;
            document.getElementById("fname").innerHTML=res.data[0].firstnamef + " " + res.data[0].lastnamef;
            document.getElementById("age").innerHTML=res.data[0].age;
            }    
        })
    }
