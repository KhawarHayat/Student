                                <div class="ui icon input">
                                  <input class="prompt" type="text" name="search" id="search" placeholder="Name of Student">
                                 <button class="ui right labeled icon button" onclick="Search()">Search <i class="right search icon"></i> </button> 
                                </div>
                              </div>
